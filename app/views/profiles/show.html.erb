<div class="header">
  <%= render "shared/header" %>
</div>

<div class="main">
  <div class="profile">Profile</div>
    <div class="profile-bar-wrapper">
      <div class="profile-left-bar">
        <div class="person-image">
          <% if @profile.image.attached? %>
            <%= image_tag @profile.image.variant(resize: '360x500')%>
          <% else %>
            <%= image_tag "person_pict.png", size:("360x500") %>
          <% end %>
        </div>
      </div>

      <div class="profile-right-bar">
        <div class="profile-title">氏名 / Name</div>
        <div class="profile-contents"><%="#{@profile.user.last_name}#{@profile.user.first_name}"%></div>
        <div class="profile-contents"><%="#{@profile.user.first_name_en}#{@profile.user.last_name_en}"%></div>

        <div class="profile-title">学位 / Degree</div>
        <div class="profile-contents"><%= markdown(@profile.degree) %>&nbsp;</div>

        <div class="profile-title">生年月日 / Birthday</div>
        <div class="profile-contents"><%= @profile.user.birthday %></div>

        <div class="profile-title">所属 / Affiliation</div>
        <div class="profile-contents"><%= markdown(@profile.affiliation) %>&nbsp;</div>

        <div class="profile-title">研究領域 / Research Fields</div>
        <div class="profile-contents"><%= markdown(@profile.research_fields) %>&nbsp;</div>

        <div class="profile-title">連絡先 / Contact</div>
        <div class="profile-contents"><%= markdown(@profile.contact) %>&nbsp;</div>

        <div class="profile-title">学歴 / Education</div>
        <div class="profile-contents"><%= markdown(@profile.education) %>&nbsp;</div>

        <div class="profile-title">所属学会 / Academic Affiliations</div>
        <div class="profile-contents"><%= markdown(@profile.academic_affiliations) %></div>
      </div>
    </div>

  </div>

  <div class="profile-bottom-bar">
  <%if user_signed_in? %>
    <% if current_user.id == @profile.user.id%>
      <%= link_to "編集する", edit_profile_path, class:"profile-edit-btn" %>
    <% end %>
  <% end %>
  <%= link_to "トップページ", root_path, class:"toppage-btn" %>
  </div>
</div>