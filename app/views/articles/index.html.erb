<%= render "shared/header" %>
<%= link_to "新規投稿", new_article_path%>

<%= form_with url: search_articles_path, local: true, method: :get do |f| %>
  <% types = {記事: :articles, 研究者: :researchers} %>
  <%= f.select :type, types %>
  <%= f.text_field :keyword, placeholder: "記事検索" %>
  <%= f.submit "検索" %>
<% end %>

<%= link_to "論文", articles_path(category_id: 1) %>
<%= link_to "研究ノート", articles_path(category_id: 2) %>
<%= link_to "講義資料", articles_path(category_id: 3) %>
<%= link_to "その他", articles_path(category_id: 4) %>

<% @articles.each do |article| %>
  <%= render "shared/article", article: article%>
<% end %>