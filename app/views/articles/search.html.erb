<div class="header">
<%= render "shared/header" %>
<%= render "shared/post_form" %>
</div>

<div class="main">
  <%= render "shared/search_form" %>

  <div class="index-wrapper">
    <%# <div class="index-side-bar"> %>
      <%#= render "shared/researcher_side_bar", article: @article%>
    <%# </div> %>

    <div class="index-main-bar">
      <%= render "shared/category_tabs" %>
      <% if @articles.present? %>
        <% @articles.each do |article| %>
          <%= render "shared/article_card", article: article %>
        <% end %>
      <% end %>

      <% if @researchers.present? %>
        <% @researchers.each do |researcher| %>
          <%= render "shared/researcher_card", researcher: researcher%>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
